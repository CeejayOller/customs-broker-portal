      "forms": {
        "seaFreight": [
          "Consignee Selection",
          "Exporter Details",
          "Bill of Lading Management",
          "Vessel Information",
          "Multiple B/L Support"
        ],
        "airFreight": [
          "Consignee Selection",
          "Exporter Details",
          "Airway Bill Management",
          "Aircraft Information"
        ],
        "goodsDeclaration": [
          "Multi-item Support",
          "HS Code Fields",
          "Weight and Value Inputs"
        ],
        "documentUpload": [
          "Commercial Invoice",
          "Packing List",
          "Upload Status Display"
        ]
      }
    },
