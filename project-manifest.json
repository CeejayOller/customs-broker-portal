      "status": "implemented",
      "components": [
        "Sidebar Navigation",
        "Header with Notifications"
      ]
    }
  },
  "projectStructure": {
    "src": {
      "app": {
        "admin": {
          "admin": {
            "page.tsx": "Main dashboard with stats and activities",
            "import": {
              "page.tsx": "Import clearance list view",
              "[id]": {
                "page.tsx": "Individual shipment view"
              },
              "components": {
                "ImportClearanceWorkflow.tsx": "Workflow status tracker",
                "NewImportForm.tsx": "Import creation form",
                "types": {
                  "import-form.ts": "Import form type definitions"
                }
              }
            }
          },
          "layout.tsx": "Admin layout with authentication"
        },
        "api": {
          "admin": {
            "import": {
              "documents": {
                "upload": "Document upload API endpoint"
              },
              "reference-number": {
                "route.ts": "Reference number generation API"
              }
            }
          }
        }
      },
      "lib": {
        "utils": {
          "reference-number.ts": "Reference number generation utilities"
        }
      }
    }
  },
  "inProgress": {
